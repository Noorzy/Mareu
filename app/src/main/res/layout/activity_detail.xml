<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailActivity">

    <TextView
        android:id="@+id/textView_detail_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="88dp"
        android:text="nom de la reunion"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_detail_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="salle"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/textView_detail_nom"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_nom" />

    <TextView
        android:id="@+id/textView_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Date"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/textView_detail_room"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_room" />

    <TextView
        android:id="@+id/textView_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="heure"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/textView_detail_date"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_date" />

    <TextView
        android:id="@+id/textView_detail_emails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:breakStrategy="high_quality"
        android:text="emails participants"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/textView_detail_time"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_time" />



</androidx.constraintlayout.widget.ConstraintLayout>